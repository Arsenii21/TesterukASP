@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="ml-4">
            <ul class="nav navbar-nav navbar-right">
                <li class="mr-2">
                    @Html.ActionLink("Здравствуйте " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>
        </div>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="/Account/Register">Регистрация<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/Account/Login">Выполнить вход<span class="sr-only">(current)</span></a>
        </li>
    </ul>
}
